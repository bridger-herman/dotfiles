# Notes concatenation
alias notes_cat='~/GitHub/projects/notes_cat.py'

# Notes creation
alias mk_notes='~/GitHub/projects/mk_notes.sh'

# Recursive text finder
alias finder='~/GitHub/projects/./finder.py'

# TODO lister
alias todos='~/GitHub/projects/todos.py'

# Python aliases
alias p='/usr/bin/env python3'
