  alias blender='~/Programs/blender-2.78c-linux-glibc219-x86_64/blender'
fi

# vim
alias v='/usr/bin/env vim'

# LaTeX making
alias texmake='make -f ~/GitHub/projects/latex.make $@'

# Steam Locomotive
alias sl='~/GitHub/sl/sl'
